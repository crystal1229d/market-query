{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      /* app (라우팅, 페이지) */
      "@app/*": ["src/app/*"],
      "@route/*": ["src/app/route/*"],

      /* entity */
      "@entity/*": ["src/entity/*"],
      "@product/*": ["src/entity/product/*"],
      "@cart/*": ["src/entity/cart/*"],

      /* feature */
      "@feature/*": ["src/feature/*"],

      /* shared (공통) */
      "@shared/*": ["src/shared/*"],
      "@layout/*": ["src/shared/layout/*"],
      "@ui/*": ["src/shared/ui/*"],
      "@api/*": ["src/shared/api/*"],
      "@hook/*": ["src/shared/hook/*"],
      "@lib/*": ["src/shared/lib/*"],
      "@type/*": ["src/shared/type/*"],
      "@config/*": ["src/shared/config/*"],
      "@asset/*": ["src/shared/asset/*"],
      "@style/*": ["src/shared/style/*"]
    }
  }
}
